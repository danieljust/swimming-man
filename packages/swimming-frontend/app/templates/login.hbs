<form {{action 'authenticate' on='submit'}}>
    <div class="jumbotron text-center">
        <h2>Sign in</h2>

      {{display-error isLoaded=isLoaded
                      errorMessage=errorMessage
                      responseMessage=responseMessage}}

        <div class="form-horizontal form-group form-group-lg row">
            <div class="col-md-4 col-md-offset-4">
                {{input value=email placeholder='Enter your E-mail' class='form-control'}}<br>
                {{input value=password placeholder='Enter password' class='form-control' type='password'}}<br>
            </div>
            <div class="col-md-2 col-md-offset-5">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Login
                </button>
            </div>
        </div>
    </div>
</form>


