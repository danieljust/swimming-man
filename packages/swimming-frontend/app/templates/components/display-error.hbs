<div class="row">
  <div class="col-md-8 col-md-offset-2">
    {{#if isLoaded}}
      <div class="alert alert-success alert-dismissable">
        <button class="close" data-dismiss="alert" aria-label="close"{{action 'resetSuccess'
                                                                              responseMessage=responseMessage
                                                                              isLoaded=isLoaded}}>&times;</button>
        {{responseMessage}}
      </div>
    {{/if}}
    {{#if errorMessage}}
      <div class="alert alert-danger alert-dismissable">
        <button class="close" data-dismiss="alert" aria-label="close"{{action 'resetError'
                                                                              errorMessage=errorMessage}}>&times;</button>
        {{#each-in errorMessage as |key value|}}
          {{value}}<br/>
        {{/each-in}}
      </div>
    {{/if}}
  </div>
</div>
